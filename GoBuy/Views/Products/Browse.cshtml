@model GoBuy.Models.Category
@{
    Layout = "~/Views/_Shared/_LayoutPage1.cshtml";
}

<h2>Product</h2>
   @{Html.RenderAction("CategoryMenu","Products");           }
<h4>
    分類: @Model.CategoryName
</h4>
<table class="table">
    <thead>
        <tr>
            <th>商品編號</th>
            <th>商品名稱</th>
            <th>定價</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Product)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <img src="~/@Url.Content(product.ProductUrl == null ?"Upload/Images/product_s.jpg" :product.ProductUrl)"
                         alt="Image" class="product_img_s" />
                </td>
                <td>
                    <a href=@Url.Action("Details/" +product.ProductId, "Products")>檢視</a>
                </td>
            </tr>
        }
    </tbody>
</table>

